<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.jduclos1.myapplication.AssessmentActViewer"
                tools:showIn="@layout/act_assess_viewer">

    <TextView
        android:id="@+id/tvAssessmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvAssessmentDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAssessmentTitle"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAssessmentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAssessmentDatetime"
        android:layout_marginTop="8dp"
        android:text="New Text" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvAssessmentDescription">


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="134dp"
            android:layout_height="125dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@color/buttonBacks"
            android:onClick="openAssessmentNotesList"
            android:padding="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/notes36" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="0dp"
            android:layout_row="1"
            android:onClick="openAssessmentNotesList"
            android:text="@string/notes"
            android:textAlignment="center"
            android:textSize="16sp" />

    </GridLayout>


</RelativeLayout>