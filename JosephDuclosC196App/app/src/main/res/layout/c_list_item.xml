<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
            android:id="@+id/imageDocIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/addterm" />


    <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:layout_toEndOf="@+id/imageDocIcon"
            android:layout_toRightOf="@+id/imageDocIcon"
            android:singleLine="true"
            android:text="Example Class Name"

            android:textColor="@color/list_item_text"
            android:textSize="18sp" />


    <LinearLayout
            android:id="@+id/datesLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvCourseName"
            android:layout_toEndOf="@+id/imageDocIcon"
            android:layout_toRightOf="@+id/imageDocIcon"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tvCourseStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCourseName"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/imageDocIcon"
                android:text="Start Date" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCourseName"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/imageDocIcon"
                android:text=" - " />

        <TextView
                android:id="@+id/tvCourseEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCourseName"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/imageDocIcon"
                android:text="End Date" />

    </LinearLayout>

    <TextView
            android:id="@+id/tvCourseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageDocIcon"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="8dp"
            android:text="Status: asdasdasdasd" />
</RelativeLayout>